<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hearing Aid Pro"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:textColor="#333333" />

        <!-- Power Control -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:radius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš¡ Power Control"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:textColor="#333333" />

                <Button
                    android:id="@+id/btnToggle"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="START HEARING AID"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš ï¸ Use headphones for best results"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="#FF5722"
                    android:background="#FFE5E5"
                    android:padding="8dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Real-Time Audio Visualization -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:radius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Real-Time Audio Visualization"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:textColor="#333333" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Waveform (Time Domain)"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:textColor="#4CAF50" />

                <com.example.hearingaidapp.WaveformView
                    android:id="@+id/waveformView"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="16dp"
                    android:background="#1a1a1a" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Spectrum Analyzer (Frequency Domain)"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:textColor="#FF9800" />

                <com.example.hearingaidapp.SpectrumView
                    android:id="@+id/spectrumView"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="#1a1a1a" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Master Volume -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:radius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”Š Master Volume"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tvVolumeLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Volume: 150%"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
                    android:textColor="#666666" />

                <SeekBar
                    android:id="@+id/seekBarVolume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="14" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Noise Canceling -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:radius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ§ Noise Canceling"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:textColor="#333333" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reduces background noise while preserving speech"
                    android:textSize="12sp"
                    android:layout_marginBottom="12dp"
                    android:textColor="#666666" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enable:"
                        android:textSize="14sp"
                        android:textColor="#666666" />

                    <Switch
                        android:id="@+id/switchNoiseCanceling"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp" />

                    <TextView
                        android:id="@+id/tvNoiseStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Learning noise..."
                        android:textSize="12sp"
                        android:gravity="end"
                        android:textColor="#FF9800"
                        android:visibility="gone" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvNoiseStrength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Strength: 70%"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"
                    android:textColor="#666666" />

                <SeekBar
                    android:id="@+id/seekBarNoiseStrength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="70"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnResetNoiseProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reset Noise Profile"
                    android:textSize="12sp"
                    android:enabled="false" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Parametric EQ -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:radius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ›ï¸ Parametric EQ"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:textColor="#333333" />

                <!-- Preset Management Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <Button
                        android:id="@+id/btnLoadPreset"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Load"
                        android:textSize="12sp"
                        android:padding="8dp"
                        android:layout_marginEnd="4dp" />

                    <Button
                        android:id="@+id/btnSavePreset"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Save"
                        android:textSize="12sp"
                        android:padding="8dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp" />

                    <Button
                        android:id="@+id/btnAddFilter"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Add Filter"
                        android:textSize="12sp"
                        android:padding="8dp"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvCurrentPreset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current: Custom"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:layout_marginBottom="16dp"
                    android:textColor="#666666"
                    android:gravity="center" />

                <!-- Dynamic Filter Container -->
                <LinearLayout
                    android:id="@+id/filterContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- Dynamic filters will be added here -->
                </LinearLayout>

                <!-- No Filters Message -->
                <TextView
                    android:id="@+id/tvNoFilters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No filters added yet.\nTap 'Add Filter' to create your first filter."
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="visible" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Other Features -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:radius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš™ï¸ Advanced Features"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:textColor="#333333" />

                <!-- Noise Gate -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸš« Noise Gate"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textColor="#607D8B" />

                <TextView
                    android:id="@+id/tvNoiseGate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Threshold: 2%"
                    android:textSize="14sp"
                    android:textColor="#666666" />

                <SeekBar
                    android:id="@+id/seekBarNoiseGate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="0" />

                <!-- Compression -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“‰ Compression"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:textColor="#795548" />

                <TextView
                    android:id="@+id/tvCompression"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ratio: 70%"
                    android:textSize="14sp"
                    android:textColor="#666666" />

                <SeekBar
                    android:id="@+id/seekBarCompression"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="0" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
